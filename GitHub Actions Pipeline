name: Build and Push Image to Harbor

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker
      uses: docker/setup-buildx-action@v3

    - name: Login to Harbor
      run: |
        echo "${{ secrets.HARBOR_PASSWORD }}" | docker login \
        ${{ secrets.HARBOR_URL }} \
        -u ${{ secrets.HARBOR_USERNAME }} \
        --password-stdin

    - name: Build Docker image
      run: |
        IMAGE_TAG=${{ github.sha }}
        docker build -t \
        ${{ secrets.HARBOR_URL }}/${{ secrets.HARBOR_PROJECT }}/harbor-app:$IMAGE_TAG .

    - name: Push Docker image
      run: |
        IMAGE_TAG=${{ github.sha }}
        docker push \
        ${{ secrets.HARBOR_URL }}/${{ secrets.HARBOR_PROJECT }}/harbor-app:$IMAGE_TAG
